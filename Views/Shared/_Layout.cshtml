                    <button id="search-button" type="button" class="btn btn-primary" onclick="DisplaySearchItemsList()">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

                <!-- Right elements -->
                <!-- Right elements -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    <div id="dv-quick-search" class="dvsearch" style="display:none;">
